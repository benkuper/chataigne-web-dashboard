<ControlContainer 
    @control={{@control}} 
    @showLabel={{ true }}
>
    
    <div class="secondary-container">
        {{#if @control.isTime }}
            <Input 
                value={{ this.time }} 
                disabled={{@control.readOnly}}
                class="secondary time"
                {{on "change" (fn this.input "time") }} 
                {{on "change" this.update}}
            />
        {{else}}
            <Input 
                value={{ this.roundedValue }} 
                disabled={{@control.readOnly}}
                class="secondary" 
                inputmode="decimal"
                {{ on "change" this.input }} 
                {{ on "change" this.update }} 
            />
        {{/if}}
    </div>
    
    <div class="main-input">
        {{#if @control.hasRange}}
            <RangeSlider 
                @name={{ @control.id }}
                @value={{ @control.value }}

                @label={{ @control.label }}
                
                @min={{ @control.minVal }}
                @max={{ @control.maxVal }}
                
                @fgColor={{ this.fgColorRgba }}
                @bgColor={{ this.bgColorRgba }}
                @textColor={{ this.args.control.textColorRgba }}
                @borderColor={{ this.args.control.borderColorRgba }}
                @borderWidth={{ this.args.control.borderWidth }}
                @isVertical={{ this.args.control.isVertical }}
                
                @onInput={{ this.setValue }} 
                @onUpdate={{ this.update }} 

                @readOnly={{ @control.readOnly }}
            />
        {{else}}
            {{#if this.isTime }}
                <Input 
                    value={{ this.time }} 
                    disabled={{@control.readOnly}}
                    class="secondary time"
                    {{on "change" (fn this.input "time") }} 
                    {{on "change" this.update}} 
                    {{ style this.customizeStyles }}
                />
            {{else}}
                <Input 
                    value={{ this.roundedValue }} 
                    disabled={{@control.readOnly}}
                    class="secondary" 
                    inputmode="decimal"
                    {{ on "change" this.input }} 
                    {{ on "change" this.update }} 
                    {{ style this.customizeStyles }}
                />
                <button class="increment" 
                    {{ on "click" this.increment}} 
                    disabled={{ @control.readOnly}}
                >+</button>
                <button class="decrement" 
                    {{ on "click" this.decrement}}
                    disabled={{ @control.readOnly}}
                >-</button>
            {{/if}}
        {{/if}}
    </div>

    
    {{yield}}
</ControlContainer>