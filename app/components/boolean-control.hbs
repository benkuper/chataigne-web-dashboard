<ControlContainer 
    @control={{@control}} 
    @displayLayout={{@displayLayout}}
    @showLabel={{ true }}
>
    <div class="clear"></div>
    <div class="main-input">
        <Input @type="checkbox" @checked={{@control.value}} {{on "input" (fn this.update @control.value)}} class="switch" />
    </div>
    {{yield}}
</ControlContainer>