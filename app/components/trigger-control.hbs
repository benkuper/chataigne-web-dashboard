<ControlContainer 
    @control={{@control}} 
    @displayLayout={{@displayLayout}}
    @showLabel={{ false }}
>
    <div class="clear"></div>
    <button {{on "touchstart" this.update}} {{on "mousedown" this.update}} class="{{ if @control.triggered "triggered" }}">{{@control.label}}</button>
    {{yield}}
</ControlContainer>