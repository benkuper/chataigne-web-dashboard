<div class="dashboard {{ if this.settings.displayLayout "layout" "responsive" }}" {{ style this.sizeStyle }}>
    {{#if @dashboard.name }}
        <h1 class="unselectable">{{@dashboard.name}}</h1>
    {{/if}}

    {{#each @dashboard.sortedControls as |control|}}
        {{#let (component control.constructor.modelName) as |TheComponent|}}
            <TheComponent 
                @control={{control}} 
            />
        {{/let}}
    {{/each}}

    {{yield}}
</div>