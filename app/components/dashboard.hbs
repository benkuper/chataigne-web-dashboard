<h1>{{@dashboard.name}}</h1>

<div class="dashboard {{ if @displayLayout "layout" "responsive" }}" {{ style this.sizeStyle }}>
    {{#each @dashboard.sortedControls as |control|}}
        {{#let (component control.constructor.modelName) as |TheComponent|}}
            <TheComponent 
                @control={{control}} 
                @displayLayout={{ @displayLayout }}
            />
        {{/let}}
    {{/each}}
</div>

{{yield}}