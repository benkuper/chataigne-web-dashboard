<div class="control {{ @extraClass }} {{ @control.modelName }} {{ if @control.hasAllRanges "" "no-range"}} {{ if @control.isVertical "vertical" ""}} {{ if @useWidthSplit "width-split" "" }}" {{ style this.positionStyles }}>
    {{#if this.showLabel }}
        <label for={{@control.id}} class="control-label unselectable">
            {{@control.label}}
        </label>
    {{/if}}

    {{yield}}
</div>